rulesetdir LTeX25

# map
set alltemperate=disabled
set barbarians=disabled
set generator="FRACTAL"
set huts=0
set landmass=55
set mapsize="PLAYER"
#set revealmap=MAP_START
set separatepoles=disabled
set specials=200
set startpos="ALL"
set steepness=15
set temperature=50
set tilesperplayer=450
set topology="WRAPX|WRAPY"
set wetness=60

# general rules
set citymindist=3
set contactturns=0
set dispersion=4
set foggedborders=enabled
set rapturedelay=3
set restrictinfra=enabled
set revolen=2
set spacerace=disabled
set startunits=ccccww
set techlevel=0
set unreachableprotects=disabled

# diplomacy, technology
set diplchance=50
set diplcost=0
set diplomacy=HUMAN
set sciencebox=100
set techlost_donor=20
set techlost_recv=70
set techpenalty=0
