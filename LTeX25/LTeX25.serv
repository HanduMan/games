set aifill=0
set allowtake=""
set ec_chat=enabled
set ec_info=enabled 
set ec_max_size=5000
set ec_turns=9
set maxplayers=126
set saveturns=1
set scorelog=1
set timeout=82800
set unitwaittime=0
